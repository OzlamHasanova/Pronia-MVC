@model IEnumerable<SlideItem>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slide Table</h4>
            <a asp-action="Create">Create Slide</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Photo
                            </th>
                            <th>
                                Offer
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slide in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/website-images/@slide.Photo" alt="image" />
                                </td>
                                <td>
                                    @slide.Offer
                                </td>
                                <td>
                                    @slide.Title
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@slide.Id" class="btn btn-primary"><i class="mdi mdi-information" style="color:azure"></i></a>
                                    <a asp-action="Update" asp-route-id="@slide.Id" class="btn btn-warning"><i class="mdi mdi-pencil-box" style="color:azure"></i></a>
                                    <a asp-action="Delete" asp-route-id="@slide.Id" class="btn btn-danger"><i class="mdi mdi-delete-sweep" style="color:azure"></i></a>
                                </td>


                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

